/* Task #8:
Create a dynamic program to store temperature readings of a city for n days 
and m different times in a day using a 2D array.
=> Calculate the daily average temperature.
=> Find the hottest and coldest day.
*/

#include <iostream>
using namespace std;
int main() {
    int days, times;
    cout << "Enter number of days: ";
    cin >> days;
    cout << "Enter number of readings per day: ";
    cin >> times;
    double** temp = new double*[days];
    for (int i = 0; i < days; i++) {
        temp[i] = new double[times];
    }
    cout << "\nEnter temperature readings:\n";
    for (int i = 0; i < days; i++) {
        cout << "Day " << i + 1 << ": ";
        for (int j = 0; j < times; j++) {
            cin >> temp[i][j];
        }
}
    double hottest = -1e9, coldest = 1e9;
    int hotDay = -1, coldDay = -1;
    for (int i = 0; i < days; i++) {
        double sum = 0;
        for (int j = 0; j < times; j++) {
            sum += temp[i][j];
        }
        double avg = sum / times;
        cout << "Average Day " << i + 1 << ": " << avg << endl;
        if (avg > hottest) {
            hottest = avg;
            hotDay = i+1;
        }
        if (avg < coldest) {
            coldest = avg;
            coldDay = i+1;}
    }
    cout << "Hottest Day: Day " << hotDay << " (Avg = " << hottest << ")"<<endl;
    cout << "Coldest Day: Day " << coldDay << " (Avg = " << coldest << ")"<<endl;
    for (int i = 0; i < days; i++) {
        delete[] temp[i];
    }
    delete[] temp;
