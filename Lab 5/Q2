#include <iostream>
using namespace std;

void printNumbers(int n) {
    if (n <= 0) {
        return;
    }
    cout << n << " ";  
    printNumbers(n - 1);  
}

int main() {
    int number;
    cout << "Enter a number: ";
    cin >> number;

    cout << "Numbers from " << number << " down to 1: ";
    printNumbers(number);
    cout << endl;
}
