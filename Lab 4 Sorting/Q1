#include<iostream>
using namespace std;

void bubblesort(int arr[], int n){
for (int x = 0; x < n; x++) {
    for (int y = 0; y < n - 1; y++) {
    if (arr[y] < arr[y + 1]) {
      int temp = arr[y];
        arr[y] = arr[y + 1];
        arr[y + 1] = temp;}
}
}
}

int main(){
    int arr[10]={};   
cout<<"input 10 elements for integer array to sort"<<endl;
for(int i=0;i<10;i++){
cout<<"input element "<<i+1<<endl;
    cin>>arr[i];
}
cout<<"not sorted"<<endl;
for(int i=0;i<10;i++){
    cout<<arr[i];
}
cout<<" "<<endl;

bubblesort(arr,10);
cout<<"sorted"<<endl;
for(int i=0;i<10;i++){
    cout<<arr[i];
}
return 0;
}
